<script>
    $(document).ready(function () {
        getcountrylist('ddlcountry')
        $('.clockpicker').clockpicker();
    })
    $('#ddlcountry').change(function () {
        getstatelist($(this).val(), 'ddlstate')
    })

    $('#ddlstate').change(function () {
        getcitieslist($(this).val(), 'ddlcity')
    })
    jQuery.validator.addMethod("notEqual", function (value, element, param) {
        return this.optional(element) || value !== param;
    }, "Please choose a value!");
    $("form[name='frmsrc']").validate({
        // Specify validation rules
        rules: {
            ddlcategory: "required",
            txtsubcat: "required",
            txtnoemps: "required",
            txtempexp: "required",
            txtfromtime: {
                required: true,
                notEqual: "00:00"
            },
            txttotime: {
                required: true,
                notEqual: "00:00"
            },
            //ddltimings: "required",
            //ddlcontractperiod: "required",
            txtcontractperiod: "required",
            ddlcontractperiodtype: "required",
            ddltrsprt: "required",
            txtworkloc: "required",
            cbterms: "required",
            txtcompany: "required",
            ddlpaytype: "required",
            txtcurrencytype: "required",
            txtamount: "required",
            txtdescmsg: "required",
            ddlcountry: "required",
            ddlstate: "required",
            ddlcity: "required"
        },

        submitHandler: function (form) {
            form.submit();
        },
        //errorElement: "div",
        errorPlacement: function (error, element) {
            if (element[0].id == 'cbterms') {
                error.insertAfter('#divcb');
            }
            else if (element[0].id == 'txtfromtime') {
                error.insertAfter('#divtxtfromtime');
            }
            else if (element[0].id == 'txttotime') {
                error.insertAfter('#divtxttotime');
            }
            else {
                error.insertAfter(element);
            }
        }
    });
    $('#ddlcontractperiodtype').change(function (e) {
        if ($(this).val() == 'Permanent') {
            $('#txtcontractperiod,#txtcontractperiod-error').hide()
        }
        else {
            $('#txtcontractperiod').show()
        }
    })
    $(".numsonly").keypress(function (e) {
        //if the letter is not digit then display error and don't type anything
        if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
            //display error message
            return false;
        }
    });
    $(".decimals").keydown(function (event) {


        if (event.shiftKey == true) {
            event.preventDefault();
        }

        if ((event.keyCode >= 48 && event.keyCode <= 57) ||
            (event.keyCode >= 96 && event.keyCode <= 105) ||
            event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 37 ||
            event.keyCode == 39 || event.keyCode == 46 || event.keyCode == 190) {

        } else {
            event.preventDefault();
        }

        if ($(this).val().indexOf('.') !== -1 && event.keyCode == 190)
            event.preventDefault();
        //if a decimal has been added, disable the "."-button

    });
    //$(document).click(function () {
    //    $("label.error").hide();
    //    $(".error").removeClass("error");
    //});

    var dataSet = [];
