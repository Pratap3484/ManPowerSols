        //    }
        //    else if (sessionStorage.getItem('usertype') == '4') {
        //        window.location.href = url + '/User/UserDashboard/Index';
        //    }
        //    }
        //alert(sessionStorage.getItem('jobrecid'))
    })

    $("form[name='frmlogin']").validate({
        // Specify validation rules
        rules: {
            // The key name on the left side is the name attribute
            // of an input field. Validation rules are defined
            // on the right side
            txtuserid: "required",
            txtpwd: "required",

        },
        // Specify validation error messages
        messages: {
            txtuserid: "Please enter your mail id",
            txtpwd: "Please enter password",

        },
        // Make sure the form is submitted to the destination defined
        // in the "action" attribute of the form when valid
        submitHandler: function (form) {
            form.submit();
        }
    });

    $('#btn_signin').click(function (e) {
        $('#divError').hide()
        if ($('#txtuserid').val() != '' && $('#txtpwd').val() != '') {
            e.preventDefault();
            var um = {};
            um.emailid = $('#txtuserid').val();
            um.password = $('#txtpwd').val();
            um.usertype = "0";

            $.ajax({
                //url: '@Url.Action("Login", "Start")',
                url:'/start/Start/Login',
                type: 'POST',
                data: JSON.stringify(um),
                contentType: 'application/json; charset=utf-8',
                dataType: "json",
                success: function (res) {
                    if (res.ResponseCode == "200") {
                        $('#mdlLogin').modal('hide')
                        sessionStorage.setItem('usermailid', um.emailid)
                        sessionStorage.setItem('name', res.ResponseList.userdetails[0].FirstName + ' ' + res.ResponseList.userdetails[0].LastName)
                        sessionStorage.setItem('comapany', res.ResponseList.userdetails[0].PresentCompanyName == null ? '' : res.ResponseList.userdetails[0].PresentCompanyName)
                        sessionStorage.setItem('usertype', res.ResponseList.userdetails[0].UserType )
                        var url = window.location.href.split('/')[0]
                        
                        if (res.ResponseList.userdetails[0].UserType == '3' || res.ResponseList.userdetails[0].UserType == '2') {
                            window.location.href = url + '/Employer/EmpDashboard/Index?jid=' + $('#lblRecId').text().trim();
                        }
                        else if (res.ResponseList.userdetails[0].UserType == '4') {
                            window.location.href = url + '/User/UserDashboard/Index?jid=' + $('#lblRecId').text().trim();
                        }
                    }
                    else if (res.ResponseCode == "100") {
                        $('#txtuserid').focus()
                        $("input").val('')
                        $('#divError').show()
                        $('#lblerrormsg').text('Status: ' + res.ResponseCode + '. Messsage :' + res.ResponseMessage)
                    }
                    else {
                        $('#txtuserid').focus()
                        $("input").val('')
                        $('#divError').show()
                        $('#lblerrormsg').text('Status: ' + res.ResponseCode + '. Messsage :' + res.ResponseMessage)
                    }
                },
                error: function (err) {
                    $('#txtuserid').focus()
                    $("input").val('')
                    $('#divError').show()
                    $('#lblerrormsg').text('Status: ' + res.ResponseCode + '. Messsage :' + res.ResponseMessage)
                    //$('#divLoader').modal('hide');
                }
            });
        }
    })
